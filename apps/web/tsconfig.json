{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/lib/trpc/*": ["../../libs/trpc/*"]
