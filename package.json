{
  "name": "no-auth",
  "private": true,
  "version": "0.2.0",
  "author": "Sagar Variya",
  "description": "",
  "keywords": [],
  "license": "ISC",
  "packageManager": "pnpm@10.2.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sagar-v4/no-auth.git"
  },
  "bugs": {
    "url": "https://github.com/Sagar-v4/no-auth/issues"
  },
  "homepage": "https://github.com/Sagar-v4/no-auth#readme",
  "engines": {
    "node": ">=22.13.1"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "release": "release-it"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@release-it/conventional-changelog": "^10.0.0",
    "@tailwindcss/postcss": "^4.0.6",
    "@turbo/gen": "^2.4.1",
    "@types/node": "^22.13.1",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "@workspace/ui": "workspace:*",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.0",
    "release-it": "^18.1.2",
    "tailwindcss": "^4.0.6",
    "turbo": "^2.4.1",
    "typescript": "5.7.3"
  },
  "dependencies": {
    "lucide-react": "0.475.0",
    "next": "^15.1.6",
    "next-themes": "^0.4.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.24.1"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "turbo lint --"
    ],
    "**/*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release-it": {
    "$schema": "https://unpkg.com/release-it@18/schema/release-it.json",
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "refactor",
              "section": "Refactors"
            },
            {
              "type": "docs",
              "section": "Documentation"
            },
            {
              "type": "test",
              "section": "Tests"
            },
            {
              "type": "chore",
              "section": "Chores"
            },
            {
              "type": "ci",
              "section": "Continuous Integration"
            },
            {
              "type": "revert",
              "section": "Reverts"
            },
            {
              "type": "style",
              "section": "Styles"
            },
            {
              "type": "perf",
              "section": "Performance Improvements"
            },
            {
              "type": "build",
              "section": "Build System"
            }
          ]
        }
      }
    }
  }
}
